<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/dark_button_color" android:startColor="@color/dark_button_color" />
            <stroke android:width="0dp" android:color="@color/colorPrimaryDark" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>

        <shape>
            <gradient android:angle="270" android:endColor="@color/button_color" android:startColor="@color/button_color" />
            <stroke android:width="0dp" android:color="@color/colorPrimary" />
            <corners android:radius="5dp" />
        </shape>

    </item>
</selector>



